{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declarationDir": "./dist/@types",
    "paths": {
      "@/*": ["dist/*"],
      "@root/*": ["./../../*"]
    },
    "lib": ["ES2021.String"]
  },
  "ts-node": {
    "files": true
  },
  "include": ["lib", "types"],
  "exclude": ["node_modules"]
}
