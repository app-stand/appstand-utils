{
  "extends": "./../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "declarationDir": "./dist/@types",
    "paths": {
      "@/*": ["src/*"],
      "@root/*": ["./../../*"]
    },
    "lib": ["ES2021.String"]
  },
  "include": ["src", "../../@types", "../../@shared"],
  "exclude": ["node_modules"]
}
